{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "config/*": ["config/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist", "coverage"]
}
